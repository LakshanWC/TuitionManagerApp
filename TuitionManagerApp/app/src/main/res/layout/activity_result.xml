<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:id="@+id/main"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Results"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingBottom="32dp"
            android:layout_marginTop="32dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Select Course -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Course"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Select Student -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Student"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Marks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Upload Result Button -->
        <Button
            android:id="@+id/btnUploadResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Result"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/positive_green"
            android:textColor="@android:color/white"
            android:onClick="onSubmitClick"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:onClick="goToTHome"/>

    </LinearLayout>
</ScrollView>
