<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".teacher.CourseMaterial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Course Materials"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />

    <!-- Upload Icon Card acting as "Choose File" -->
    <LinearLayout
        android:id="@+id/addMaterialCard"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:onClick="selectDocument">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/outline_add_to_drive_24"
            android:contentDescription="Drive Icon" />
    </LinearLayout>

    <!-- Input Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/topicInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., Stacks"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginBottom="24dp" />

    <!-- Selected File Display -->
    <LinearLayout
        android:id="@+id/selectedFileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/selectedFileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected File:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/selectedFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Upload Button -->
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Upload to Drive"
        android:textAllCaps="false"
        android:backgroundTint="@color/positive_green"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:onClick="uploadMaterials"/>

    <!-- Horizontal Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">


        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="goHome"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:text="Home" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/uploadProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
