<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white"
    tools:context=".student.StudentHome">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Student"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/showQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:onClick="showQRCode">

        <ImageView
            android:id="@+id/currentQR"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/qr_code_48px" />
    </LinearLayout>

    <!-- Row 1: Attendance & Assignments -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <!-- Attendance Card -->
        <LinearLayout
            android:id="@+id/cardAttendance"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="goToAttendance">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_today" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Attendance"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Assignments Card -->
        <LinearLayout
            android:id="@+id/cardAssignments"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="goToAssignments">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Assignments"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Row 2: Results & Course Materials -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <!-- Results Card -->
        <LinearLayout
            android:id="@+id/cardResults"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="goToResults">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_agenda" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Results"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Course Materials Card -->
        <LinearLayout
            android:id="@+id/cardCourseMaterials"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="goToCourseMaterials">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Materials"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Row 3: Notifications & Log Out -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <!-- Notifications Card -->
        <LinearLayout
            android:id="@+id/cardNotifications"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="goToNotifications">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Notifications"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Log Out Card -->
        <LinearLayout
            android:id="@+id/card_logout"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="logoutStudent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/outline_account_circle_off_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Log Out"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Exit Card (centered below) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/card_exit"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:onClick="exitAppFromStudent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/outline_cancel_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Exit"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>